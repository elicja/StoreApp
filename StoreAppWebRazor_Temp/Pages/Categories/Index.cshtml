@page
@model StoreAppWebRazor_Temp.Pages.Categories.IndexModel

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Add Category
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var category in Model.CategoryList.OrderBy(d => d.DisplayOrder))
        {
        <tr>
            <td>@category.Name</td>
            <td>
                @category.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-page="/categories/edit" asp-route-categoryId="@category.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pen"></i> Edit
                    </a>
                            <a asp-page="/categories/delete" asp-route-categoryId="@category.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash3-fill"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
    </div>
